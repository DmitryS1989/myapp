<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class = "form-check form-switch">
    <%= f.collection_check_boxes :role_ids, Role.where(resource_type: nil), :id, :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p> <%= button_to "Cancel my account", user_path(@user.id),
                  data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
